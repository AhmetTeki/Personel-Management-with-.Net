@model PersonelManagement.Application.Requests.LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"/>
    </head>
    <body class="bg-light d-flex justify-content-center align-items-center" style="height:100vh;">

        <div class="card shadow p-4" style="width: 100%; max-width: 500px;">
            <h2 class="text-center mb-4 text-primary">Personel Yönetim Sistemi</h2>
            <h3 class="text-center mb-4 text-primary">Giriş Yap</h3>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı adınızı girin" required
                           id="username"/>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Parola</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Parolanızı girin" required id="password"/>
                </div>

                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" checked="@Model.rememberMe" asp-for="rememberMe" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Beni Hatırla
                    </label>
                </div>
                <div class="text-center">
                    <small class="text-muted">
                        Hesabın yok mu? <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Kayıt ol</a>
                    </small>
                </div>
                <div asp-validation-summary="All" class="text-danger lead"></div>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>    