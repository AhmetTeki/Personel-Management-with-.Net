@using PersonelManagement.Application.Dtos
@model List<PersonelManagement.Application.Dtos.PriorityListDto>
@{
    Layout = "_Layout";
    int count = 1;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tanım</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (PriorityListDto item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Definition</td>
                    <td><a asp-action="Update" asp-controller="Priority" asp-area="Admin">Güncelle</a></td>
                </tr>
                count++;
            }
        }
        @if (Model.Count <= 0)
        {
            <h3>Herhangi bir Aciliyet bulunamadı</h3>
        }

    </tbody>
</table>