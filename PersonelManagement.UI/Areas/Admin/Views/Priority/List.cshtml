@using PersonelManagement.Application.Dtos
@model List<PersonelManagement.Application.Dtos.PriorityListDto>
@{
    Layout = "_Layout";
    int count = 1;
}
<a asp-action="Create" asp-controller="Priority" asp-area="Admin" class="btn btn-primary mb-4"> Yeni Aciliyet Durumu Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tanım</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (PriorityListDto item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Definition</td>
                    <td>
                        <a asp-action="Update" asp-controller="Priority" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                        <a asp-action="Delete" onclick="return confirm(`Silmek İstediğinizden Emin Misin?`)" asp-controller="Priority"
                           asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
                count++;
            }
        }
        @if (Model.Count <= 0)
        {
            <h3>Herhangi Bir Aciliyet Bulunamadı</h3>
        }

    </tbody>
</table>